
MDFloatLayout:
    MDLabel:
        id: check_label_text
        halign: "center"
        markup: True
        text: "[b][size=30]Current Task[/size][/b]"
        pos_hint: { "y": 0.45 }

    MDIconButton:
        id: add_check
        icon: "img/chckmrk1.png"
        pos_hint: {"center_x": .5, "center_y": .6}
        icon_size: "250sp"
        on_release: ""

    MDFloatingActionButton:
        id: add_delete_select
        icon: "plus-minus-variant"
        on_release: app.show_task_dialog()
        elevation_normal: 12
        pos_hint: {"x": 0.25, "y": 0.1}

    MDFloatingActionButton:
        id: check_review
        icon: "calendar-check-outline"
        on_release: app.set_label_text()
        elevation_normal: 12
        pos_hint: {"x": 0.45, "y": 0.1}

    MDFloatingActionButton:
        id: different_tasks
        icon: "list-box-outline"
        on_release: app.all_tasks_list()
        elevation_normal: 12
        pos_hint: {"x": 0.65, "y": 0.1}


<ShowCreatedTasks>:
    id: listing
    orientation: "vertical"
    spacing: "10dp"
    size_hint: 1, None
    height: "400dp"

    GridLayout:
        rows: 15
        adaptive_width: True

        ScrollView:
            id: show_list
            size_hint: 1, 1

            MDList:
                id: container

    MDBoxLayout:
        orientation: 'horizontal'
        adaptive_size: True

        MDFlatButton:
            text: 'CLOSE'
            on_release: app.close_tasks()

<AddingTaskWindow>:
    orientation: "vertical"
    spacing: "10dp"
    size_hint: 1, None
    height: "150dp"

    GridLayout:
        rows: 1

        MDTextField:
            id: task_text
            hint_text: "Add Task..."
            pos_hint: {"center_y": .4}
            max_text_length: 20
            on_text_validate: (app.create_db_entry(task_text, date_text.text), app.close_dialog())

    MDLabel:
        spacing: '10dp'
        id: date_text

    BoxLayout:
        orientation: 'horizontal'

        MDRaisedButton:
            text: "SAVE"
            on_release: (app.create_db_entry(task_text, date_text.text), app.close_dialog())
        MDFlatButton:
            text: 'CANCEL'
            on_release: app.close_dialog()

<ListItemWithCheckbox>:
    id: the_list_item
    markup: True

    LeftCheckbox:
        id: check
        on_release:
            root.mark(check, the_list_item)

    IconRightWidget:
        icon: 'trash-can-outline'
        theme_text_color: "Custom"
        text_color: 1, 0, 0, 1
        on_release:
            root.delete_item(the_list_item)
